.page {
  padding: 20rpx;
}
.page-head {
  text-align: center;
}
.page-title {
  font-size: 36rpx;
  margin-bottom: 20rpx;
}
.page-score {
  font-size: 48rpx;
  color: #1cbbb4;
}
.score-num {
  font-size: 48rpx;
  color: #1cbbb4;
}
.score-text {
  font-size: 36rpx;
}
